<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">


    </style>

    <style name="MainTheme" >
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/white</item>

    </style>

    <style name="titleStyle" parent="MainTheme">
        <item name="android:layout_marginBottom">@dimen/title_buttons_margin</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="menuButtonStyle" parent="MainTheme">
        <item name="android:padding">@dimen/activity_padding_margin</item>
    <item name="android:background">@color/buttonbacground</item>
        <item name="android:layout_marginBottom">@dimen/space_in_buttons</item>
    </style>

    <style name="menuButtonStyle.red" parent="menuButtonStyle">
        <item name="android:background">@color/buttonbacgroundred</item>
    </style>

</resources>
